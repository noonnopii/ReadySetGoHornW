<?xml version="1.0" encoding="utf-8"?>

<android.support.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context="com.noonnopii.readysetgohornw.MainActivity"
    tools:deviceIds="wear">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/inner_frame_layout_padding"
        app:boxedEdges="all">

        <TextView
            android:id="@+id/setting_textViewSetting"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/setting_textSetting"
            android:textAlignment="center"
            android:textSize="@dimen/screen_percentage_10"
            android:layout_gravity="top"/>

        <TextView
            android:id="@+id/setting_textViewOption"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/setting_textOption"
            android:textAlignment="center"
            android:layout_gravity="bottom"/>

    </FrameLayout>
</android.support.wear.widget.BoxInsetLayout>

